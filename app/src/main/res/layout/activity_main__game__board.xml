<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    android:orientation="vertical"
    tools:context=".Main_Game_Board">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/board_tv_player1"
            android:layout_width="137dp"
            android:layout_height="132dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/player1"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/board_tv_health1"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_tv_player1"
            android:layout_alignLeft="@id/board_tv_player1"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/board_tv_player2"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/player2"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/board_tv_health2"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_tv_player1"
            android:layout_alignLeft="@id/board_tv_player2"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/board_tv_ball"
            android:layout_width="158dp"
            android:layout_height="161dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ball"
            android:gravity="center"
            android:text="" />


        <TextView
            android:id="@+id/ballhealth"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_tv_ball"
            android:layout_alignLeft="@id/board_tv_ball"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-28dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/board_tv_player4"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:layout_above="@id/board_tv_health4"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/player3"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/board_tv_health4"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/board_tv_player4"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/board_tv_player3"
            android:layout_width="136dp"
            android:layout_height="129dp"
            android:layout_above="@id/board_tv_health3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="-3dp"
            android:background="@drawable/player4"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/board_tv_health3"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/board_tv_player3"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="21dp"
            android:layout_marginBottom="1dp"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="114dp"
            android:layout_height="19dp"
            android:layout_above="@+id/board_tv_player4"
            android:layout_below="@+id/board_tv_health1"
            android:layout_alignEnd="@+id/board_tv_player1"
            android:layout_alignRight="@+id/board_tv_player1"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="23dp"
            android:max="100"
            android:progress="79" />

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="114dp"
            android:layout_height="19dp"
            android:layout_below="@+id/ballhealth"
            android:layout_alignStart="@+id/board_tv_ball"
            android:layout_alignLeft="@+id/board_tv_ball"
            android:layout_alignEnd="@+id/board_tv_ball"
            android:layout_alignRight="@+id/board_tv_ball"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="-9dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="80dp"
            android:max="100"
            android:progress="79" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="114dp"
            android:layout_height="19dp"
            android:layout_above="@+id/board_tv_player3"
            android:layout_below="@+id/board_tv_health2"
            android:layout_alignStart="@+id/board_tv_player2"
            android:layout_alignLeft="@+id/board_tv_player2"
            android:layout_alignEnd="@+id/board_tv_player1"
            android:layout_alignRight="@+id/board_tv_player1"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-13dp"
            android:layout_marginEnd="-226dp"
            android:layout_marginRight="-226dp"
            android:layout_marginBottom="31dp"
            android:max="100"
            android:progress="79" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@drawable/bb2">


        <TextView
            android:id="@+id/board_your_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginRight="-6dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/youeturn"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text=""
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/al"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/attack"
                android:text=""
                android:textColor="@color/white" />

            <Button
                android:id="@+id/ar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/attackright"
                android:text=""
                android:textColor="@color/white" />

            <Button
                android:id="@+id/ab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/attackball"
                android:text=""
                android:textColor="@color/white" />

            <Button
                android:id="@+id/he"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/heal"
                android:text=""
                android:textColor="@color/white" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="114dp"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/board_your_turn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginEnd="273dp"
            android:layout_marginRight="273dp"
            android:layout_marginBottom="264dp"
            android:max="100"
            android:progress="79" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="114dp"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/board_your_turn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="260dp"
            android:layout_marginLeft="260dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="261dp"
            android:max="100"
            android:progress="79" />


    </RelativeLayout>


</LinearLayout>